<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import javafx.geometry.Insets?>
<AnchorPane xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml"
            fx:controller="harvest.ui.product.DisplayProductController"
            prefHeight="700.0" prefWidth="1400.0"
            stylesheets="@../../style.css"
            fx:id="fxProductTableRoot">

    <HBox AnchorPane.leftAnchor="5.0" AnchorPane.rightAnchor="5.0" AnchorPane.topAnchor="5.0">
        <children>
            <TableView fx:id="fxProductTable" prefHeight="500.0" maxHeight="600.0" prefWidth="300.0">
                <columnResizePolicy><TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/></columnResizePolicy>
                <columns>
                    <TableColumn fx:id="fxProductNameColumn" minWidth="-Infinity" prefWidth="300.0" text="Product Name"/>
                </columns>
                <contextMenu>
                    <ContextMenu>
                        <items>
                            <MenuItem fx:id="fxEditProduct" mnemonicParsing="false" onAction="#editProduct" text="Edit product" />
                            <MenuItem fx:id="fxDeleteProduct" mnemonicParsing="false" onAction="#deleteProduct" text="Delete product" />
                        </items>
                    </ContextMenu>
                </contextMenu>
            </TableView>
            <TableView fx:id="fxProductDetailTable" prefHeight="500.0" maxHeight="600.0" prefWidth="900.0">
                <columnResizePolicy><TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/></columnResizePolicy>
                <columns>
                    <TableColumn fx:id="fxProductTypeColumn" prefWidth="300.0" text="Type Product"/>
                    <TableColumn fx:id="fxProductCodeColumn" prefWidth="300.0" text="Code Product"/>
                    <TableColumn fx:id="fxProductFirstPriceColumn" prefWidth="Infinity" text="Product Price 1"/>
                    <TableColumn fx:id="fxProductSecondPriceColumn" prefWidth="Infinity" text="Product Price 2"/>
                </columns>
                <contextMenu>
                    <ContextMenu>
                        <items>
                            <MenuItem fx:id="fxEditProductDetail" mnemonicParsing="false" onAction="#editProductDetail" text="Edit product detail" />
                            <MenuItem fx:id="fxDeleteProductDetail" mnemonicParsing="false" onAction="#deleteProductDetail" text="Delete product detail" />
                        </items>
                    </ContextMenu>
                </contextMenu>
            </TableView>
        </children>
    </HBox>

</AnchorPane>
