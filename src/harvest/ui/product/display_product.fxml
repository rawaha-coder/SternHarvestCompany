<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.ContextMenu?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>

<AnchorPane fx:id="fxProductTableRoot" prefHeight="700.0" prefWidth="1100.0" stylesheets="@../../sub_style.css" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="harvest.ui.product.DisplayProductController">

    <Label alignment="CENTER" contentDisplay="CENTER" layoutX="25.0" layoutY="14.0" prefHeight="30.0" prefWidth="900.0" text="Tableau des produits" textAlignment="CENTER" styleClass="tableName"/>

    <HBox layoutX="32.0" layoutY="86.0" AnchorPane.leftAnchor="25.0" AnchorPane.topAnchor="50.0">
        <children>
            <TableView fx:id="fxProductTable" maxHeight="600.0" prefHeight="500.0" prefWidth="200.0">
                <columnResizePolicy><TableView fx:constant="CONSTRAINED_RESIZE_POLICY" /></columnResizePolicy>
                <columns>
                    <TableColumn fx:id="fxProductNameColumn" prefWidth="200.0" text="Produit" />
                </columns>
                <contextMenu>
                    <ContextMenu>
                        <items>
                            <MenuItem fx:id="fxEditProduct" mnemonicParsing="false" onAction="#editProduct" text="Edit product" />
                            <MenuItem fx:id="fxDeleteProduct" mnemonicParsing="false" onAction="#deleteProduct" text="Delete product" />
                        </items>
                    </ContextMenu>
                </contextMenu>
            </TableView>
            <TableView fx:id="fxProductDetailTable" maxHeight="600.0" prefHeight="500.0" prefWidth="800.0">
                <columnResizePolicy><TableView fx:constant="CONSTRAINED_RESIZE_POLICY" /></columnResizePolicy>
                <columns>
                    <TableColumn fx:id="fxProductTypeColumn" prefWidth="200.0" text="Type" />
                    <TableColumn fx:id="fxProductCodeColumn" prefWidth="200.0" text="Code" />
                    <TableColumn fx:id="fxProductPriceEmployeeColumn" prefWidth="200" text="Prix.E" />
                    <TableColumn fx:id="fxProductPriceCompanyColumn" prefWidth="200" text="Prix.C" />
                </columns>
                <contextMenu>
                    <ContextMenu>
                        <items>
                            <MenuItem fx:id="fxEditProductDetail" mnemonicParsing="false" onAction="#editProductDetail" text="Edit product detail" />
                            <MenuItem fx:id="fxDeleteProductDetail" mnemonicParsing="false" onAction="#deleteProductDetail" text="Delete product detail" />
                        </items>
                    </ContextMenu>
                </contextMenu>
            </TableView>
        </children>
    </HBox>
</AnchorPane>
