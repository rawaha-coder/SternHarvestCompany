<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.Cursor?>
<?import javafx.scene.control.ContextMenu?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>

<AnchorPane fx:id="fxTableUI" prefHeight="700.0" prefWidth="900.0" stylesheets="@../../style.css" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="harvest.ui.supplier.DisplaySupplierController">

    <padding>
        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
    </padding>
    <children>
      <HBox alignment="TOP_CENTER" AnchorPane.bottomAnchor="10.0" AnchorPane.leftAnchor="10.0" AnchorPane.rightAnchor="10.0" AnchorPane.topAnchor="10.0">
         <children>
              <TableView fx:id="fxSupplierTable" prefHeight="600" prefWidth="600.0">
                  <columnResizePolicy>
                  <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
               </columnResizePolicy>
                  <columns>
                      <TableColumn fx:id="fxSupplierName" minWidth="100.0" prefWidth="200.0" text="Supplier" />
                      <TableColumn fx:id="fxSupplierFirstName" minWidth="100.0" prefWidth="200.0" text="First Name" />
                      <TableColumn fx:id="fxSupplierLastName" minWidth="100.0" prefWidth="200.0" text="Last Name" />
                  </columns>
                  <contextMenu>
                      <ContextMenu>
                          <items>
                              <MenuItem fx:id="fxEditSupplier" mnemonicParsing="false" onAction="#editSupplier" text="Edit Supplier" />
                              <MenuItem fx:id="fxDeleteSupplier" mnemonicParsing="false" onAction="#deleteSupplier" text="Delete Supplier" />
                          </items>
                      </ContextMenu>
                  </contextMenu>
              </TableView>
              <TableView fx:id="fxFarmTable" prefHeight="600" prefWidth="300.0">
                  <columnResizePolicy>
                  <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
               </columnResizePolicy>
                  <columns>
                      <TableColumn fx:id="fxSupplierFarm" minWidth="100.0" prefWidth="300.0" text="Farm" />
                  </columns>
                  <contextMenu>
                      <ContextMenu>
                          <items>
                              <MenuItem fx:id="fxEditFarm" mnemonicParsing="false" onAction="#editFarm" text="Edit Farm" />
                              <MenuItem fx:id="fxDeleteFarm" mnemonicParsing="false" onAction="#deleteFarm" text="Delete Farm" />
                          </items>
                      </ContextMenu>
                  </contextMenu>
              </TableView>
              <TableView fx:id="fxProductTable" prefHeight="600" prefWidth="300.0">
                  <columnResizePolicy>
                  <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
               </columnResizePolicy>
                  <columns>
                      <TableColumn fx:id="fxSupplierProduct" minWidth="100.0" prefWidth="300.0" text="Product" />
                  </columns>
                  <contextMenu>
                      <ContextMenu>
                          <items>
                              <MenuItem fx:id="fxEditProduct" mnemonicParsing="false" onAction="#editProduct" text="Edit Product" />
                              <MenuItem fx:id="fxDeleteProduct" mnemonicParsing="false" onAction="#deleteProduct" text="Delete Product" />
                          </items>
                      </ContextMenu>
                  </contextMenu>
              </TableView>
         </children>
      </HBox>
    </children>
   <cursor>
      <Cursor fx:constant="CLOSED_HAND" />
   </cursor>

</AnchorPane>
