<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.Cursor?>
<?import javafx.scene.control.ContextMenu?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>

<AnchorPane fx:id="fxTableUI" prefHeight="700.0" prefWidth="1400.0" stylesheets="@../../style.css" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="harvest.ui.supplier.DisplaySupplierController">

    <children>
      <HBox alignment="TOP_CENTER" AnchorPane.leftAnchor="5.0" AnchorPane.rightAnchor="5.0" AnchorPane.topAnchor="5.0">
         <children>
              <TableView fx:id="fxSupplierTable" prefHeight="500.0" maxHeight="600.0" prefWidth="600.0">
                  <columnResizePolicy>
                  <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
               </columnResizePolicy>
                  <columns>
                      <TableColumn fx:id="fxSupplierName" minWidth="150.0" prefWidth="200.0" text="Supplier" />
                      <TableColumn fx:id="fxSupplierFirstName" minWidth="100.0" prefWidth="200.0" text="First Name" />
                      <TableColumn fx:id="fxSupplierLastName" minWidth="100.0" prefWidth="200.0" text="Last Name" />
                  </columns>
                  <contextMenu>
                      <ContextMenu>
                          <items>
                              <MenuItem fx:id="fxEditSupplier" mnemonicParsing="false" onAction="#editSupplier" text="Edit Supplier" />
                              <MenuItem fx:id="fxDeleteSupplier" mnemonicParsing="false" onAction="#deleteSupplier" text="Delete Supplier" />
                          </items>
                      </ContextMenu>
                  </contextMenu>
              </TableView>
             <TableView fx:id="fxSupplyTable" prefHeight="500.0" maxHeight="600.0" prefWidth="600.0">
                 <columnResizePolicy>
                     <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                 </columnResizePolicy>
                 <columns>
                     <TableColumn fx:id="fxSupplyFarm" minWidth="150.0" prefWidth="300.0" text="Farm" />
                     <TableColumn fx:id="fxSupplyProduct" minWidth="150.0" prefWidth="300.0" text="Product" />
                 </columns>
                 <contextMenu>
                     <ContextMenu>
                         <items>
                             <MenuItem fx:id="fxEditSupply" mnemonicParsing="false" onAction="#editSupply" text="Edit Supply" />
                             <MenuItem fx:id="fxDeleteSupply" mnemonicParsing="false" onAction="#deleteSupply" text="Delete Supply" />
                         </items>
                     </ContextMenu>
                 </contextMenu>
             </TableView>
         </children>
      </HBox>
    </children>
   <cursor>
      <Cursor fx:constant="CLOSED_HAND" />
   </cursor>

</AnchorPane>
