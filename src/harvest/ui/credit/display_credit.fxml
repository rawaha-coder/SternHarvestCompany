                    <contextMenu>
                        <ContextMenu>
                            <items>
                                <MenuItem fx:id="fxEditCredit" mnemonicParsing="false" onAction="#editCredit" text="Edit" />
                                <MenuItem fx:id="fxDeleteCredit" mnemonicParsing="false" onAction="#deleteCredit" text="Delete" />
                            </items>
                        </ContextMenu>
                    </contextMenu>
                    <HBox.margin>
                        <Insets right="5.0" />
