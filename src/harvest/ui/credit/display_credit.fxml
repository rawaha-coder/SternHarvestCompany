<AnchorPane fx:id="fxTableUI" prefHeight="690.0" prefWidth="1200.0" stylesheets="@../../style.css" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="harvest.ui.credit.DisplayCrdTrsController">

