                    <contextMenu>
                        <ContextMenu>
                            <items>
                                <MenuItem fx:id="fxEditTransport" mnemonicParsing="false" onAction="#editTransport" text="Edit" />
                                <MenuItem fx:id="fxDeleteTransport" mnemonicParsing="false" onAction="#deleteTransport" text="Delete" />
                            </items>
                        </ContextMenu>
                    </contextMenu>
                </TableView>
            </children>
        </HBox>
    </children>
