<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ChoiceBox?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.RadioButton?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.ToggleGroup?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane fx:id="mAnchorPane" prefHeight="600.0" prefWidth="1200.0" stylesheets="@../../style.css"
            xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="harvest.ui.harvest.SetHarvestWork">
    <AnchorPane layoutX="1013.0" prefHeight="844.0" prefWidth="184.0">
        <children>
            <Label alignment="CENTER" contentDisplay="CENTER" layoutX="29.0" layoutY="111.0" prefHeight="30.0"
                   prefWidth="130.0" text="All Quantity"/>
            <TextField fx:id="fxAllQuantity" layoutX="29.0" layoutY="141.0" prefHeight="30.0" prefWidth="130.0"/>
            <Label alignment="CENTER" contentDisplay="CENTER" layoutX="27.0" layoutY="191.0" prefHeight="30.0"
                   prefWidth="130.0" text="Bad Quality"/>
            <TextField fx:id="fxBadQuality" layoutX="27.0" layoutY="221.0" prefHeight="30.0" prefWidth="130.0"/>
            <Label alignment="CENTER" contentDisplay="CENTER" layoutX="27.0" layoutY="271.0" prefHeight="30.0"
                   prefWidth="130.0" text="Good Quality"/>
            <TextField fx:id="fxGoodQuality" layoutX="27.0" layoutY="301.0" prefHeight="30.0" prefWidth="130.0"/>
            <Label alignment="CENTER" layoutX="27.0" layoutY="351.0" prefHeight="30.0" prefWidth="130.0" text="Price"/>
            <TextField fx:id="fxProductPrice" layoutX="27.0" layoutY="381.0" prefHeight="30.0" prefWidth="130.0"/>
            <Label alignment="CENTER" layoutX="32.0" layoutY="504.0" prefHeight="30.0" prefWidth="120.0"
                   text="Total Credit"/>
            <TextField fx:id="fxTotalCredit" layoutX="32.0" layoutY="534.0" prefHeight="30.0" prefWidth="130.0"/>
            <Label alignment="CENTER" layoutX="29.0" layoutY="32.0" prefHeight="30.0" prefWidth="130.0"
                   text="Total Employees"/>
            <TextField fx:id="fxTotalEmployee" layoutX="30.0" layoutY="62.0" prefHeight="30.0" prefWidth="130.0"/>
            <Label alignment="CENTER" layoutX="27.0" layoutY="430.0" prefHeight="30.0" prefWidth="130.0"
                   text="Total Transport"/>
            <TextField fx:id="fxTotalTransport" layoutX="27.0" layoutY="460.0" prefHeight="30.0" prefWidth="130.0"/>
            <Label alignment="CENTER" layoutX="34.0" layoutY="587.0" prefHeight="30.0" prefWidth="120.0"
                   text="Total Net"/>
            <TextField fx:id="fxTotalNet" layoutX="34.0" layoutY="617.0" prefHeight="30.0" prefWidth="130.0"/>

            <Button fx:id="fxCalculateResultButton" layoutX="34.0" layoutY="682.0" mnemonicParsing="false"
                    onAction="#handleCalculateResultButton" prefHeight="30.0" prefWidth="130.0" text="Calculate"/>
            <TextField fx:id="fxCalculateResult" layoutX="34.0" layoutY="721.0" prefHeight="30.0" prefWidth="130.0"/>
            <Button fx:id="fxApplyButton" layoutX="32.0" layoutY="776.0" mnemonicParsing="false"
                    onAction="#handleApplyButton" prefHeight="30.0" prefWidth="130.0" text="Apply"/>

        </children>
    </AnchorPane>

    <TableView fx:id="fxHarvestWorkTable" editable="true" layoutX="13.0" layoutY="134.0" prefHeight="692.0"
               prefWidth="989.0">
        <columnResizePolicy>
            <TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/>
        </columnResizePolicy>
        <columns>
            <TableColumn fx:id="fxEmployeeSelectColumn" editable="true" minWidth="60.0" text="Select"/>
            <TableColumn fx:id="fxEmployeeFullNameColumn" minWidth="130.0" prefWidth="180.0" text="Employee"/>
            <TableColumn fx:id="fxAllQuantityColumn" editable="true" minWidth="80.0" prefWidth="120.0" text="All QNT"/>
            <TableColumn fx:id="fxBadQualityColumn" editable="true" minWidth="80.0" prefWidth="120.0" text="Bad QLT"/>
            <TableColumn fx:id="fxGoodQualityColumn" editable="true" minWidth="80.0" prefWidth="120.0" text="Good QLT"/>
            <TableColumn fx:id="fxPriceColumn" editable="true" minWidth="80.0" prefWidth="120.0" text="Price"/>
            <TableColumn fx:id="fxTransportSelectColumn" editable="true" minWidth="80.0" prefWidth="100.0"
                         text="Transport"/>
            <TableColumn fx:id="fxCreditColumn" editable="true" minWidth="80.0" prefWidth="100.0" text="Credit"/>
            <TableColumn fx:id="fxNetAmountColumn" editable="true" minWidth="80.0" prefWidth="100.0" text="Net"/>
            <TableColumn fx:id="fxRemarqueColumn" editable="true" minWidth="140.0" prefWidth="220.0" text="Remarque"/>
        </columns>
    </TableView>
    <Label layoutX="22.0" layoutY="25.0" prefHeight="30.0" prefWidth="50.0" text="Date:"/>
    <DatePicker fx:id="fxHarvestDate" layoutX="94.0" layoutY="25.0" minWidth="142.0" prefHeight="30.0"
                prefWidth="140.0"/>
    <Label layoutX="266.0" layoutY="26.0" prefHeight="30.0" prefWidth="80.0" text="Supplier:"/>
    <ChoiceBox fx:id="fxSupplierList" layoutX="346.0" layoutY="25.0" prefHeight="30.0" prefWidth="200.0"/>
    <Label layoutX="574.0" layoutY="25.0" prefHeight="30.0" prefWidth="50.0" text="Farm:"/>
    <ChoiceBox fx:id="fxFarmList" layoutX="624.0" layoutY="25.0" prefHeight="30.0" prefWidth="200.0"/>
    <Label layoutX="20.0" layoutY="78.0" prefHeight="30.0" prefWidth="70.0" text="Product:"/>
    <ChoiceBox fx:id="fxProductList" layoutX="95.0" layoutY="77.0" prefHeight="30.0" prefWidth="140.0"/>
    <Label layoutX="266.0" layoutY="79.0" prefHeight="30.0" prefWidth="80.0" text="Code:"/>
    <ChoiceBox fx:id="fxProductCodeList" layoutX="346.0" layoutY="78.0" prefHeight="30.0" prefWidth="200.0"/>

    <RadioButton fx:id="fxIndividual" layoutX="685.0" layoutY="78.0" mnemonicParsing="false" prefHeight="30.0"
                 prefWidth="100.0" text="Individual">
        <toggleGroup>
            <ToggleGroup fx:id="fxHarvestType"/>
        </toggleGroup>
    </RadioButton>
    <RadioButton fx:id="fxGroup" layoutX="592.0" layoutY="78.0" mnemonicParsing="false" prefHeight="30.0"
                 prefWidth="105.0" text="Group" toggleGroup="$fxHarvestType"/>
    <Button fx:id="fxClearButton" layoutX="881.0" layoutY="25.0" mnemonicParsing="false" onAction="#handleClearButton"
            prefHeight="30.0" prefWidth="100.0" text="Clear X"/>

    <Button fx:id="fxSaveButton" layoutX="821.0" layoutY="79.0" mnemonicParsing="false" onAction="#handleSaveButton"
            prefHeight="40.0" prefWidth="160.0" text="Save"/>
</AnchorPane>
