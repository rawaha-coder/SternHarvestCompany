<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ChoiceBox?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.RadioButton?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.ToggleGroup?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>

<?import harvest.util.TimeTextField?>
<AnchorPane fx:id="addHarvestHoursUI" prefHeight="600.0" prefWidth="1200.0" stylesheets="@../../style.css" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="harvest.ui.hours.AddHoursController">

    <HBox prefHeight="600.0" prefWidth="1200.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
        <children>
            <AnchorPane prefHeight="600.0" prefWidth="378.0" style="-fx-border-width: 2; -fx-border-color: blue; -fx-border-radius: 15;">

                <Label layoutX="14.0" layoutY="55.0" prefHeight="30.0" prefWidth="100.0" text="Harvest Date" />
                <DatePicker fx:id="fxHarvestDate" layoutX="144.0" layoutY="55.0" minWidth="150.0" prefHeight="30.0" prefWidth="200.0" />
                <Label layoutX="14.0" layoutY="103.0" prefHeight="30.0" prefWidth="100.0" text="Supplier" />
                <ChoiceBox fx:id="fxSupplierList" layoutX="144.0" layoutY="103.0" prefHeight="30.0" prefWidth="200.0" />
                <Label layoutX="14.0" layoutY="157.0" prefHeight="30.0" prefWidth="100.0" text="Farm" />
                <ChoiceBox fx:id="fxFarmList" layoutX="144.0" layoutY="157.0" prefHeight="30.0" prefWidth="200.0" />
                <Label layoutX="14.0" layoutY="214.0" prefHeight="30.0" prefWidth="100.0" text="Product" />
                <ChoiceBox fx:id="fxProductList" layoutX="144.0" layoutY="214.0" prefHeight="30.0" prefWidth="200.0" />
                <Label layoutX="14.0" layoutY="272.0" prefHeight="30.0" prefWidth="100.0" text="Code" />
                <ChoiceBox fx:id="fxProductCodeList" layoutX="144.0" layoutY="272.0" prefHeight="30.0" prefWidth="200.0" />

                <Label layoutX="14.0" layoutY="329.0" prefHeight="30.0" prefWidth="120.0" text="Start Morning"/>
                <TimeTextField fx:id="fxStartMorningTime" layoutX="14.0" layoutY="359.0" prefHeight="30.0"
                               prefWidth="120.0"/>
                <Label layoutX="217.0" layoutY="329.0" prefHeight="30.0" prefWidth="120.0" text="End Morning"/>
                <TimeTextField fx:id="fxEndMorningTime" layoutX="217.0" layoutY="359.0" prefHeight="30.0"
                               prefWidth="120.0"/>
                <Label layoutX="14.0" layoutY="407.0" prefHeight="30.0" prefWidth="120.0" text="Start Noon"/>
                <TimeTextField fx:id="fxStartNoonTime" layoutX="14.0" layoutY="437.0" prefHeight="30.0"
                               prefWidth="120.0"/>
                <Label layoutX="215.0" layoutY="407.0" prefHeight="30.0" prefWidth="120.0" text="End Noon"/>
                <TimeTextField fx:id="fxEndNoonTime" layoutX="217.0" layoutY="437.0" prefHeight="30.0"
                               prefWidth="120.0"/>

                <RadioButton fx:id="fxHarvester" layoutX="71.0" layoutY="498.0" mnemonicParsing="false" prefHeight="30.0" prefWidth="100.0" text="Harvester" toggleGroup="$fxEmployeeType">
                    <toggleGroup>
                        <ToggleGroup fx:id="fxEmployeeType" />
                    </toggleGroup>
                </RadioButton>
                <RadioButton fx:id="fxController" layoutX="205.0" layoutY="498.0" mnemonicParsing="false" prefHeight="30.0" prefWidth="105.0" text="Controller" toggleGroup="$fxEmployeeType" />

                <Button fx:id="fxSaveButton" layoutX="21.0" layoutY="551.0" mnemonicParsing="false" onAction="#handleSaveButton" prefHeight="30.0" prefWidth="150.0" text="Save" />
                <Button fx:id="fxClearButton" layoutX="220.0" layoutY="551.0" mnemonicParsing="false" onAction="#handleClearButton" prefHeight="30.0" prefWidth="150.0" text="Clear" />

            </AnchorPane>

            <TableView fx:id="fxAddHarvestHoursTable" editable="true" prefHeight="500.0" prefWidth="725.0">
                <columnResizePolicy>
                    <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                </columnResizePolicy>
                <columns>
                    <TableColumn fx:id="fxEmployeeSelectColumn" editable="true" minWidth="40.0" text="Select" />
                    <TableColumn fx:id="fxEmployeeFullNameColumn" minWidth="100.0" prefWidth="180.0" text="Employee" />
                    <TableColumn fx:id="fxTransportSelectColumn" editable="true" minWidth="40.0" text="Transport" />
                    <TableColumn fx:id="fxCreditColumn" editable="true" minWidth="160.0" prefWidth="220.0" text="Credit" />
                    <TableColumn fx:id="fxRemarqueColumn" editable="true" minWidth="160.0" prefWidth="220.0" text="Remarque" />
                </columns>
            </TableView>
            <AnchorPane prefHeight="600.0" prefWidth="227.0" style="-fx-border-width: 2; -fx-border-color: blue; -fx-border-radius: 15;">
                <children>
                    <Label layoutX="26.0" layoutY="14.0" prefHeight="30.0" prefWidth="140.0" text="Total Hours" />
                    <TextField fx:id="fxTotalHours" layoutX="21.0" layoutY="44.0" prefHeight="30.0" prefWidth="150.0" />
                    <Label layoutX="22.0" layoutY="86.0" prefHeight="30.0" prefWidth="140.0" text="Total Credit" />
                    <TextField fx:id="fxTotalCredit" layoutX="25.0" layoutY="116.0" prefHeight="30.0" prefWidth="150.0" />
                    <Label layoutX="26.0" layoutY="162.0" prefHeight="30.0" prefWidth="140.0" text="Total Employees" />
                    <TextField fx:id="fxTotalEmployee" layoutX="25.0" layoutY="192.0" prefHeight="30.0" prefWidth="150.0" />
                    <Label layoutX="26.0" layoutY="241.0" prefHeight="30.0" prefWidth="140.0" text="Total transport" />
                    <TextField fx:id="fxTotalTransport" layoutX="25.0" layoutY="271.0" prefHeight="30.0" prefWidth="150.0" />

                    <Label layoutX="26.0" layoutY="320.0" prefHeight="30.0" prefWidth="140.0" text="Hour price" />
                    <TextField fx:id="fxHourPrice" layoutX="21.0" layoutY="350.0" prefHeight="30.0" prefWidth="150.0" />

                    <Button fx:id="fxCalculateResultButton" layoutX="21.0" layoutY="403.0" mnemonicParsing="false" onAction="#handleCalculateResultButton" prefHeight="30.0" prefWidth="150.0" text="Calculate" />
                    <TextField fx:id="fxCalculateResult" layoutX="21.0" layoutY="453.0" prefHeight="30.0" prefWidth="150.0" />


                    <Button fx:id="fxApplyButton" layoutX="17.0" layoutY="505.0" mnemonicParsing="false" onAction="#handleApplyButton" prefHeight="30.0" prefWidth="150.0" text="Apply" />
                    <Button fx:id="fxCloseButton" layoutX="25.0" layoutY="556.0" mnemonicParsing="false" onAction="#handleCloseButton" prefHeight="30.0" prefWidth="130.0" text="Close" />
                </children>
            </AnchorPane>
        </children>
    </HBox>

</AnchorPane>
