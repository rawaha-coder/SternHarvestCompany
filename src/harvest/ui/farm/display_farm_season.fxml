<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.ContextMenu?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>

<AnchorPane prefHeight="600.0" prefWidth="1200.0" stylesheets="@../../style.css" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="harvest.ui.farm.DisplayFarmSeasonController">

    <HBox layoutX="30.0" layoutY="30.0" prefHeight="538.0" prefWidth="1160.0" AnchorPane.leftAnchor="5.0" AnchorPane.rightAnchor="5.0" AnchorPane.topAnchor="5.0">
        <TableView fx:id="fxFarmTable" prefHeight="600.0" prefWidth="1300.0">
            <columnResizePolicy>
                <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
            </columnResizePolicy>
            <columns>
                <TableColumn fx:id="fxFarmNameColumn" minWidth="100" prefWidth="150.0" text="Farm name" />
                <TableColumn fx:id="fxFarmAddressColumn" minWidth="300.0" prefWidth="350.0" text="Farm Address" />
            </columns>
            <contextMenu>
                <ContextMenu>
                    <items>
                        <MenuItem fx:id="fxEditFarm" mnemonicParsing="false" onAction="#editFarm" text="Edit Farm" />
                        <MenuItem fx:id="fxDeleteFarm" mnemonicParsing="false" onAction="#deleteFarm" text="Delete Farm" />
                    </items>
                </ContextMenu>
            </contextMenu>
        </TableView>
        <TableView fx:id="fxSeasonTable" prefHeight="600.0" prefWidth="900.0">
            <columnResizePolicy>
                <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
            </columnResizePolicy>
            <columns>
                <TableColumn fx:id="fxPlantingDateColumn" minWidth="120.0" prefWidth="200.0" text="Planting date" />
                <TableColumn fx:id="fxHarvestDateColumn" minWidth="120.0" prefWidth="200.0" text="Harvest date" />
            </columns>
            <contextMenu>
                <ContextMenu>
                    <items>
                        <MenuItem fx:id="fxEditSeason" mnemonicParsing="false" onAction="#editSeason" text="Edit Season" />
                        <MenuItem fx:id="fxDeleteSeason" mnemonicParsing="false" onAction="#deleteSeason" text="Delete Season" />
                    </items>
                </ContextMenu>
            </contextMenu>
        </TableView>
    </HBox>

</AnchorPane>
