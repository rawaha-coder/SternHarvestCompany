<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.control.ToggleButton?>
<?import javafx.scene.control.ToggleGroup?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>

<?import javafx.scene.control.ProgressBar?>
<StackPane prefHeight="768" prefWidth="1024"
           stylesheets="@style.css" xmlns="http://javafx.com/javafx/11.0.1"
           xmlns:fx="http://javafx.com/fxml/1"
           fx:controller="harvest.Controller">
    <children>
        <BorderPane fx:id="mainBorderPane" stylesheets="@style.css">
            <top>
                <VBox prefHeight="120.0">
                    <children>
                        <MenuBar prefHeight="40.0" stylesheets="@style.css" BorderPane.alignment="CENTER">
                            <menus>
                                <Menu mnemonicParsing="false" text="File">
                                    <items>
                                        <MenuItem mnemonicParsing="false" text="Close" />
                                    </items>
                                </Menu>
                                <Menu mnemonicParsing="false" text="Calculation">
                                    <items>
                                        <MenuItem fx:id="fxHoursWorkCalculation" mnemonicParsing="false"  text="Hours Work Calculation" />
                                    </items>
                                </Menu>
                                <Menu mnemonicParsing="false" text="Add">
                                    <items>
                                        <MenuItem mnemonicParsing="false" text="Add Product" />
                                        <MenuItem mnemonicParsing="false" text="Add Employee" />
                                        <MenuItem mnemonicParsing="false" text="Add Farm" />
                                        <MenuItem mnemonicParsing="false" text="Add Supplier" />
                                    </items>
                                </Menu>
                                <Menu mnemonicParsing="false" text="Search">
                                    <items>
                                        <MenuItem mnemonicParsing="false" text="About" />
                                    </items>
                                </Menu>
                            </menus>
                            <BorderPane.margin>
                                <Insets />
                            </BorderPane.margin>
                            <padding>
                                <Insets bottom="10.0" left="20.0" right="10.0" top="20.0" />
                            </padding>
                            <VBox.margin>
                                <Insets />
                            </VBox.margin>
                        </MenuBar>
                        <HBox alignment="CENTER" fillHeight="true" prefHeight="40.0" prefWidth="800.0" spacing="5.0">
                            <fx:define>
                                <ToggleGroup fx:id="topMenu" />
                            </fx:define>
                            <children>
                                <ToggleButton toggleGroup="$topMenu" fx:id="hoursWorkButton"  prefHeight="30" prefWidth="140" text="Hours Work" />
                                <ToggleButton fx:id="individualWorkButton"  prefHeight="30" prefWidth="140" text="Individual Work" toggleGroup="$topMenu" />
                                <ToggleButton fx:id="groupWorkButton"  prefHeight="30" prefWidth="140" text="Group Work" toggleGroup="$topMenu" />
                                <ToggleButton fx:id="balanceButton"  prefHeight="30" prefWidth="140" text="Balance" toggleGroup="$topMenu" />
                                <ToggleButton fx:id="employeeButton"  prefHeight="30" prefWidth="120" text="Employees" toggleGroup="$topMenu" />
                                <ToggleButton fx:id="productButton"  prefHeight="30" prefWidth="120" text="Products" toggleGroup="$topMenu" />
                                <ToggleButton fx:id="farmButton"  prefHeight="30" prefWidth="120" text="Farms" toggleGroup="$topMenu" />
                                <ToggleButton fx:id="supplierButton"  prefHeight="30" prefWidth="140" text="Supplier" toggleGroup="$topMenu" />
                                <ToggleButton fx:id="creditButton"  prefHeight="30" prefWidth="160" text="Transport / Credit" toggleGroup="$topMenu" />
                            </children>
                            <padding>
                                <Insets bottom="5.0" left="10.0" right="10.0" top="5.0" />
                            </padding>
                        </HBox>
                    </children>
                </VBox>
            </top>
            <center>
            </center>
            <right>
                <VBox prefHeight="700.0" prefWidth="150.0" BorderPane.alignment="CENTER">
                    <children>
                        <Button onAction="#loadUIAddEmployee" contentDisplay="TOP" mnemonicParsing="false"  prefHeight="50.0" prefWidth="146.0" text="Add Employee">
                            <graphic>
                                <ImageView fitHeight="40.0" fitWidth="40.0" pickOnBounds="true" preserveRatio="true">
                                    <image>
                                        <Image url="@icon/ic_shortcut_assignment_ind.png" />
                                    </image>
                                </ImageView>
                            </graphic>
                        </Button>
                    </children>
                </VBox>
            </right>
            <bottom>
                <HBox>
                    <ProgressBar prefWidth="300" prefHeight="10" progress="Infinity">
                    </ProgressBar>
                </HBox>
            </bottom>
        </BorderPane>
    </children>
</StackPane>
